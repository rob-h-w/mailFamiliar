{
  "name": "mailFamiliar",
  "version": "0.0.5",
  "description": "Mail management server.",
  "main": "src/index.js",
  "repository": "https://github.com/rob-h-w/mailFamiliar",
  "author": "Rob Williamson",
  "license": "GPL-3.0-only",
  "private": false,
  "dependencies": {
    "@types/bunyan": "^1.8.6",
    "bunyan": "^1.8.12",
    "env-var": "^3.3.0",
    "hapi": "^17.6.0",
    "imap": "^0.8.19",
    "lodash": "^4.17.11",
    "runtypes": "^3.1.2"
  },
  "scripts": {
    "build": "tsc --sourceMap",
    "clean": "find . -regextype posix-egrep -regex '\\./(src|test)/.*\\.(js|js\\.map)' -type f -delete",
    "debug": "node --inspect-brk ./src/index.js",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "start": "node ./src/index.js",
    "test:api": "lab --sourcemaps --transform node_modules/lab-transform-typescript ./test/api/*.ts",
    "test:api:debug": "lab --inspect --sourcemaps --transform node_modules/lab-transform-typescript ./test/api/*.ts",
    "test:unit": "lab -c -t 75 --sourcemaps --transform node_modules/lab-transform-typescript -r lcov -o coverage/lcov.info -r console -o stdout ./test/unit/**/*.ts",
    "test:unit:debug": "lab --inspect --sourcemaps --transform node_modules/lab-transform-typescript ./test/unit/**/*.ts"
  },
  "devDependencies": {
    "@types/code": "^4.0.5",
    "@types/hapi": "^17.6.4",
    "@types/imap": "^0.8.29",
    "@types/lab": "^11.1.0",
    "@types/lodash": "^4.14.118",
    "@types/mockery": "^1.4.29",
    "@types/node": "^10.11.7",
    "@types/promise": "^7.1.30",
    "@types/promise-retry": "^1.1.3",
    "@types/sinon": "^5.0.7",
    "code": "^5.2.0",
    "lab": "^16.1.0",
    "lab-transform-typescript": "^3.0.1",
    "mockery": "^2.1.0",
    "promise-retry": "^1.1.1",
    "sinon": "^6.3.5",
    "tslint": "^5.11.0",
    "typescript": "^3.1.1"
  }
}
