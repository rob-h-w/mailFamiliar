{
  "name": "mailFamiliar",
  "version": "0.0.10",
  "description": "Mail management server.",
  "main": "src/index.js",
  "repository": "https://github.com/rob-h-w/mailFamiliar",
  "author": "Rob Williamson",
  "license": "GPL-3.0-only",
  "private": false,
  "dependencies": {
    "@hapi/hapi": "^19.1.1",
    "bunyan": "^1.8.13",
    "diff-match-patch": "^1.0.4",
    "env-var": "^6.0.1",
    "imap": "^0.8.19",
    "lodash": "^4.17.19",
    "runtypes": "^4.1.0",
    "snyk": "^1.316.1"
  },
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "clean": "rm -rf ./dist",
    "debug": "node --inspect-brk dist/src/index.js",
    "fix-lint": "eslint --fix src/**/*.ts",
    "lint": "eslint src/**/*.ts",
    "prettier": "prettier -c src",
    "prettier-test": "prettier -c test",
    "start": "node --max-old-space-size=4096 dist/src/index.js",
    "test:api": "lab -c --sourcemaps --transform node_modules/lab-transform-typescript -r lcov -o coverage/api.lcov.info -r console -o stdout test/api/*.ts test/api/*/*/*.ts",
    "test:api:debug": "lab --inspect-brk --sourcemaps --transform node_modules/lab-transform-typescript  test/api/*.ts test/api/*/*/*.ts",
    "test:unit": "lab -c -t 80 --sourcemaps --transform node_modules/lab-transform-typescript -r lcov -o coverage/lcov.info -r console -o stdout test/unit/**/*.ts",
    "test:unit:debug": "lab --inspect-brk --sourcemaps --transform node_modules/lab-transform-typescript test/unit/**/*.ts",
    "try": "node test/trial/index.js",
    "try:debug": "node --inspect-brk test/trial/index.js",
    "snyk-protect": "snyk protect",
    "prepare": "yarn run snyk-protect"
  },
  "devDependencies": {
    "@hapi/code": "^8.0.1",
    "@hapi/lab": "^22.0.3",
    "@types/bunyan": "^1.8.6",
    "@types/cli": "^0.11.19",
    "@types/code": "^4.0.5",
    "@types/diff-match-patch": "^1.0.32",
    "@types/hapi__hapi": "^19.0.2",
    "@types/imap": "^0.8.29",
    "@types/lab": "^11.1.0",
    "@types/lodash": "^4.14.118",
    "@types/mockery": "^1.4.29",
    "@types/node": "^13.7.4",
    "@types/promise-retry": "^1.1.3",
    "@types/sinon": "^7.0.11",
    "@types/temp": "^0.8.34",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "cli": "^1.0.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "lab-transform-typescript": "^3.0.1",
    "mockery": "^2.1.0",
    "prettier": "2.0.5",
    "promise-retry": "^1.1.1",
    "sinon": "^9.0.0",
    "temp": "^0.9.0",
    "typescript": "^3.8.2"
  },
  "snyk": true
}
