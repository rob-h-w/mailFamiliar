{
  "compilerOptions": {
    "alwaysStrict": true,
    "allowJs": true,
    "checkJs": true,
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "sourceRoot": "./",
    "skipLibCheck": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "target": "es2020"
  },
  "exclude": ["kotlin", "java"]
}
